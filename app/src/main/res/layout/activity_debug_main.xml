<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    tools:context="io.github.p4ndaj.bit.activity.DebugMainActivity">

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Button
            android:id="@+id/buttonDebugRegisterActivity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Register Activity"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="8dp" />

        <Button
            android:id="@+id/buttonDebugLoginActivity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Login Actiivty"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/buttonDebugRegisterActivity"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" />

        <Button
            android:id="@+id/buttonAdapterSavedPasswordDebug"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Set saved password debug adapter"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/buttonDebugLoginActivity"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" />

    </android.support.constraint.ConstraintLayout>

</ScrollView>